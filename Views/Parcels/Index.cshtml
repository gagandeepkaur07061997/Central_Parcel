@model IEnumerable<Central_Parcel.Models.Parcels>

@{
    ViewData["Title"] = "Index";
}
<head>
    <style>
        {
            box-sizing: border-box;
        }

        .column {
            float: left;
            width: 33.33%;
            padding: 5px;
        }

        /* Clearfix (clear floats) */
        .row::after {
            content: "";
            clear: both;
            display: table;
        }
    </style>
</head>
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    <div class="column">
        <img src="Images/image2.jpg" alt="image" style="width:100%">
    </div>
    <div class="column">
        <img src="Images/paecel home.jpg" alt="image" style="width:100%">
    </div>
    <div class="column">
        <img src="Images/image4.jpg" alt="image" style="width:100%">
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                <!--code to increse the size of text and to change its color-->
                
                    
                        @Html.DisplayNameFor(model => model.Delivery_address)
            </th>
            <th>
                
                    @Html.DisplayNameFor(model => model.Parcel_weight)
            </th>
            <th>
                
                    @Html.DisplayNameFor(model => model.Content_type)
            </th>
            <th>
                
                    @Html.DisplayNameFor(model => model.Shipping_cost)
            </th>
            <th> <p style="color:brown;">
                @Html.DisplayNameFor(model => model.Senders)
            </th>
            <th>
                
                    @Html.DisplayNameFor(model => model.Companies)
            </th>
            <th>
                
                    @Html.DisplayNameFor(model => model.Recievers)
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Delivery_address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Parcel_weight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content_type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shipping_cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Senders.Email_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Companies.Email_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Recievers.Email_Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
